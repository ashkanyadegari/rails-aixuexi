<div class="container">
  <h1><%= @course.name %></h1>
  <%= link_to "Back to all Courses", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h2>Course</h2>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th><%= @course.name %></th>
            <th><%= @course.description %></th>
            <th><%= image_tag("#{@course.photos[0].service_url}")%></th>
              <th><%= video_tag("#{@video_url}")%></th>
        </tbody>
      </table>

    </div>
    <div class="col-sm-12 col-md-6">
    </div>
  </div>
</div>

