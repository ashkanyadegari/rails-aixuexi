<div class="container">
  <h1><%= @course.name %></h1>
  <%= link_to "Back to all Courses", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h2>Course</h2>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th><%= @course.name %></th>
            <th><%= @course.description %></th>
            <th><%= image_tag("https://lewagon.oss-cn-beijing.aliyuncs.com/#{@course.photos[0].key}")%></th>
            <th><%= video_tag("https://lewagon.oss-cn-beijing.aliyuncs.com/#{@course.file.key}")%></th>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
    </div>
  </div>
</div>

